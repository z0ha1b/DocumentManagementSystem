{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ElsaConnection": "Data Source=(local);Integrated Security=True;Database=Elsa;TrustServerCertificate=true;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Hangfire": {
    "SchedulePollingInterval": "00:00:10",
    "WorkerCount": 1
  },
  "Elsa": {
    "Server": {
      "BaseUrl": "http://localhost:5001",
      "BasePath": "/workflows"
    },
    "Smtp": {
      "Host": "localhost",
      "Port": 2525,
      "DefaultSender": "workflow@acme.com"
    }
  }
}